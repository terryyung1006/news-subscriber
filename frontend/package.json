{
  "name": "news-subscriber-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "install-proto": "git submodule update --init --recursive",
    "gen-proto": "mkdir -p src/lib/proto && protoc --plugin=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=src/lib/proto --ts_proto_opt=esModuleInterop=true --ts_proto_opt=outputServices=grpc-js --ts_proto_opt=env=node -I proto-repo/proto proto-repo/proto/*.proto",
    "update-proto": "npm run install-proto && npm run gen-proto"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.14.3",
    "@grpc/proto-loader": "^0.8.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "google-protobuf": "^4.0.1",
    "lucide-react": "^0.554.0",
    "next": "16.0.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "tailwindcss": "^4",
    "ts-proto": "^2.8.3",
    "typescript": "^5"
  }
}
